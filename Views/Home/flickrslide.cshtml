        <div class="example">

            <div>
                <div id="fc">TiltViewer requires JavaScript and the latest Flash player. <a href="http://www.macromedia.com/go/getflashplayer/">Get Flash here.</a></div>
                <script type="text/javascript">
                    var fo = new SWFObject('/TiltViewer.swf', 'viewer', '100%', '600px', '9.0.28', '#000000');
                    fo.addVariable('useFlickr', 'true'); // we don`t need flickr right now
                    fo.addVariable('xmlURL', ''); // generator of fallery xml file
                    fo.addVariable('maxJPGSize', '600'); // max file dimension size used for gallery
                    fo.addVariable('useReloadButton', 'true'); // we don`t need it for our demo
                    fo.addVariable('columns', '4'); // we will use 3 columns
                    fo.addVariable('rows', '4'); // and 3 rows (other images will at second page)
                    fo.addParam('allowFullScreen', 'true');
                    fo.write("fc");
                </script>

            </div>

        </div>

    </div>



